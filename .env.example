# Application Settings
APP_NAME=Newsauto
APP_VERSION=1.0.0
DEBUG=False
SECRET_KEY=your-secret-key-here-change-this-in-production
API_PREFIX=/api/v1

# Database
DATABASE_URL=sqlite:///./data/newsletter.db
# For PostgreSQL:
# DATABASE_URL=postgresql://user:password@localhost:5432/newsauto

# Ollama Settings
OLLAMA_HOST=http://localhost:11434
OLLAMA_TIMEOUT=120
OLLAMA_GPU_LAYERS=-1
OLLAMA_CONTEXT_SIZE=4096

# Models Configuration
PRIMARY_MODEL=mistral:7b-instruct
ANALYTICAL_MODEL=deepseek-r1:7b
CLASSIFICATION_MODEL=phi-3
DEFAULT_TEMPERATURE=0.7
DEFAULT_MAX_TOKENS=500

# Email Settings (Gmail SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-specific-password
SMTP_FROM=Newsletter <your-email@gmail.com>
SMTP_TLS=True

# Alternative: Resend.com
# RESEND_API_KEY=re_xxxxxxxxxxxxx

# Content Sources
# Reddit API (optional)
REDDIT_CLIENT_ID=your-reddit-client-id
REDDIT_CLIENT_SECRET=your-reddit-client-secret
REDDIT_USER_AGENT=Newsauto/1.0 by YourUsername

# Cache Settings
CACHE_DIR=./data/cache
CACHE_TTL_DAYS=7
LLM_CACHE_ENABLED=True

# API Settings
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
API_RELOAD=False

# Rate Limiting
RATE_LIMIT_ENABLED=True
RATE_LIMIT_PER_MINUTE=100

# Frontend
FRONTEND_URL=http://localhost:8000
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8000"]

# Tracking & Analytics
TRACKING_BASE_URL=http://localhost:8000/track
UNSUBSCRIBE_BASE_URL=http://localhost:8000/unsubscribe

# Monitoring
ENABLE_METRICS=True
METRICS_PORT=9090

# Logging
LOG_LEVEL=INFO
LOG_FILE=./logs/newsauto.log
LOG_FORMAT=json

# Scheduler
SCHEDULER_ENABLED=True
DEFAULT_SEND_TIME=08:00
TIMEZONE=America/New_York

# Security
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24
BCRYPT_ROUNDS=12

# Feature Flags
ENABLE_REGISTRATION=True
ENABLE_ANALYTICS=True
ENABLE_AB_TESTING=False
ENABLE_PERSONALIZATION=True

# Limits
MAX_CONTENT_ITEMS_PER_FETCH=100
MAX_SUBSCRIBERS_PER_NEWSLETTER=10000
MAX_NEWSLETTERS_PER_USER=10
MAX_SUMMARY_LENGTH=500